#!/usr/bin/env bash
# comment text

apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Holberton School' > /var/www/html/index.html
sed -i '/listen 80 default_server;/a rewrite ^/redirect_me 301 Moved Permanently permanent;' /etc/nginx/sites-available/default
service nginx start
