#!/usr/bin/env bash
# Install and configure HAproxy
apt-get install --no-install-recommends software-properties-common
add-apt-repository ppa:vbernat/haproxy-2.8
apt-get install haproxy=2.8.\*
echo '' >> /etc/haproxy/haproxy.cfg
echo '' >> /etc/haproxy/haproxy.cfg
file='/etc/haproxy/haproxy.cfg'
line=36
text='frontend Mega\n'
sed -i "${line}s~.*~${text}~" $file
line2=37
text2='\tbind 54.160.106.39:80\n\tdefault_backend MegaBackend'
sed -i "${line2}s~.*~${text2}~" $file
echo '' >> /etc/haproxy/haproxy.cfg
echo '' >> /etc/haproxy/haproxy.cfg
line3=40
text3='backend MegaBackend\n\tbalance roundrobin\n'
sed -i "${line3}s~.*~${text3}~" $file
line4=42
text4='\tserver 174606-web-01 18.204.9.96:80 check\n'
sed -i "${line4}s~.*~${text4}~" $file
line5=43
text5='\tserver 174606-web-02 54.144.144.63:80 check'
sed -i "${line5}s~.*~${text5}~" $file
echo 'ENABLED=1' >> /etc/default/haproxy
service haproxy start
